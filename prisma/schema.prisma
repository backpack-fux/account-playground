datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id                 String              @id @default(uuid())
    email              String              @unique @db.VarChar(255)
    phone              String?             @unique @db.VarChar(50)
    walletAddress      String?             @unique @db.Char(42)
    username           String?             @unique @db.VarChar(15)
    currentChallenge   String?             @db.Text
    createdAt          DateTime            @default(now())
    updatedAt          DateTime            @updatedAt
    registeredPasskeys RegisteredPasskey[]

    @@index([email])
}

model RegisteredPasskey {
    id           Int                 @id @default(autoincrement())
    name         String?             @db.VarChar(255)
    credentialId String              @unique
    publicKey    String              @db.Text
    counter      BigInt              @default(0)
    transports   String[]            @db.VarChar(255)
    algorithm    CredentialAlgorithm @default(ES256)
    userId       String
    createdAt    DateTime            @default(now())
    updatedAt    DateTime            @updatedAt
    user         User                @relation(fields: [userId], references: [id])

    @@index([userId])
}

enum CredentialAlgorithm {
    ES256
    RS256
}
